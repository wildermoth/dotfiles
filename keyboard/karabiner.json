{
    "title": "Extend Layer (CapsLock) - Colemak-DH Wide",
    "rules": [
        {
            "description": "CapsLock to Hyper (F18) for Extend Layer",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": { "optional": ["any"] }
                    },
                    "to": [{ "key_code": "f18" }],
                    "to_if_alone": [{ "key_code": "escape" }],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Extend Layer Navigation and Editing",
            "manipulators": [
                {
                    "description": "F18+` -> Reload (no Mac equivalent, could map to something else)",
                    "from": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [],
                    "type": "basic"
                },
                {
                    "description": "F18+1-6 -> Hyper+1-6 (for window management)",
                    "from": {
                        "key_code": "1",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "1", "modifiers": ["left_command", "left_control", "left_option", "left_shift"] }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "2",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "2", "modifiers": ["left_command", "left_control", "left_option", "left_shift"] }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "3",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "3", "modifiers": ["left_command", "left_control", "left_option", "left_shift"] }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "4",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "4", "modifiers": ["left_command", "left_control", "left_option", "left_shift"] }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "5",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "5", "modifiers": ["left_command", "left_control", "left_option", "left_shift"] }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "6",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "6", "modifiers": ["left_command", "left_control", "left_option", "left_shift"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+7-0 -> Regular digits 7-0",
                    "from": {
                        "key_code": "7",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "7" }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "8",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "8" }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "9",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "9" }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "0",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "0" }],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "hyphen",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "hyphen" }],
                    "type": "basic"
                },
                {
                    "description": "Top Row - F18+Q -> Toggle CapsLock",
                    "from": {
                        "key_code": "q",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "caps_lock" }],
                    "type": "basic"
                },
                {
                    "description": "F18+W (Colemak W pos) -> Play/Pause",
                    "from": {
                        "key_code": "w",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "play_or_pause" }],
                    "type": "basic"
                },
                {
                    "description": "F18+F (Colemak F pos) -> Cmd+F (Find)",
                    "from": {
                        "key_code": "e",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "f", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+P (Colemak P pos) -> Cmd+Shift+S (Screenshot)",
                    "from": {
                        "key_code": "r",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "s", "modifiers": ["left_command", "left_shift"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+B (Colemak B pos) -> Cmd+P (Command Palette)",
                    "from": {
                        "key_code": "t",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "p", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+J (Colemak-DH-Wide J pos, QWERTY Y) -> Page Up",
                    "from": {
                        "key_code": "y",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "page_up" }],
                    "type": "basic"
                },
                {
                    "description": "F18+L (Colemak-DH-Wide L pos, QWERTY U) -> Home",
                    "from": {
                        "key_code": "u",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "home" }],
                    "type": "basic"
                },
                {
                    "description": "F18+U (Colemak-DH-Wide U pos, QWERTY I) -> Up Arrow",
                    "from": {
                        "key_code": "i",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "up_arrow" }],
                    "type": "basic"
                },
                {
                    "description": "F18+Y (Colemak-DH-Wide Y pos, QWERTY O) -> End",
                    "from": {
                        "key_code": "o",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "end" }],
                    "type": "basic"
                },
                {
                    "description": "F18+; (Colemak-DH-Wide ; pos, QWERTY P) -> Delete Forward",
                    "from": {
                        "key_code": "p",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "delete_forward" }],
                    "type": "basic"
                },
                {
                    "description": "F18+\\ -> Pipe |",
                    "from": {
                        "key_code": "backslash",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "backslash", "modifiers": ["left_shift"] }],
                    "type": "basic"
                },
                {
                    "description": "Home Row Modifiers - F18+A -> Cmd (hold)",
                    "from": {
                        "key_code": "a",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "left_command" }],
                    "type": "basic"
                },
                {
                    "description": "F18+R (Colemak R pos, QWERTY S) -> Ctrl (hold)",
                    "from": {
                        "key_code": "s",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "left_control" }],
                    "type": "basic"
                },
                {
                    "description": "F18+S (Colemak S pos, QWERTY D) -> Shift (hold)",
                    "from": {
                        "key_code": "d",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "left_shift" }],
                    "type": "basic"
                },
                {
                    "description": "F18+T (Colemak T pos, QWERTY F) -> Ctrl (hold)",
                    "from": {
                        "key_code": "f",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "left_control" }],
                    "type": "basic"
                },
                {
                    "description": "F18+G (Colemak-DH-Wide G pos, QWERTY G) -> Alt/Option (hold)",
                    "from": {
                        "key_code": "g",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "left_option" }],
                    "type": "basic"
                },
                {
                    "description": "F18+M (Colemak-DH-Wide M pos, QWERTY J) -> Page Down",
                    "from": {
                        "key_code": "j",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "page_down" }],
                    "type": "basic"
                },
                {
                    "description": "F18+N (Colemak-DH-Wide N pos, QWERTY K) -> Left Arrow",
                    "from": {
                        "key_code": "k",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "left_arrow" }],
                    "type": "basic"
                },
                {
                    "description": "F18+E (Colemak-DH-Wide E pos, QWERTY L) -> Down Arrow",
                    "from": {
                        "key_code": "l",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "down_arrow" }],
                    "type": "basic"
                },
                {
                    "description": "F18+I (Colemak-DH-Wide I pos, QWERTY ;) -> Right Arrow",
                    "from": {
                        "key_code": "semicolon",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "right_arrow" }],
                    "type": "basic"
                },
                {
                    "description": "F18+O (Colemak-DH-Wide O pos, QWERTY ') -> Backspace",
                    "from": {
                        "key_code": "quote",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "delete_or_backspace" }],
                    "type": "basic"
                },
                {
                    "description": "Bottom Row - F18+X (Colemak X pos, QWERTY Z) -> Ctrl+X (Cut)",
                    "from": {
                        "key_code": "z",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "x", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+C -> Cmd+C (Copy)",
                    "from": {
                        "key_code": "x",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "c", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+D (Colemak D pos, QWERTY C) -> Cmd+S (Save)",
                    "from": {
                        "key_code": "c",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "s", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+V -> Cmd+V (Paste)",
                    "from": {
                        "key_code": "v",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "v", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+Z (Colemak Z pos, QWERTY B) -> Cmd+Z (Undo)",
                    "from": {
                        "key_code": "b",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "z", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+/ (Colemak / pos, QWERTY N) -> Cmd+L",
                    "from": {
                        "key_code": "n",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "l", "modifiers": ["left_command"] }],
                    "type": "basic"
                },
                {
                    "description": "F18+K (Colemak-DH-Wide K pos, QWERTY M) -> Print Screen (F13 on Mac)",
                    "from": {
                        "key_code": "m",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "f13" }],
                    "type": "basic"
                },
                {
                    "description": "F18+H (Colemak-DH-Wide H pos, QWERTY ,) -> Backspace",
                    "from": {
                        "key_code": "comma",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "delete_or_backspace" }],
                    "type": "basic"
                },
                {
                    "description": "F18+, (Colemak-DH-Wide , pos, QWERTY .) -> Tab",
                    "from": {
                        "key_code": "period",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "tab" }],
                    "type": "basic"
                },
                {
                    "description": "F18+. (Colemak-DH-Wide . pos, QWERTY /) -> Application Key (right click menu)",
                    "from": {
                        "key_code": "slash",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "application" }],
                    "type": "basic"
                },
                {
                    "description": "F18+Space -> Cmd+Shift+P (Command Palette)",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": { "mandatory": ["f18"], "optional": ["any"] }
                    },
                    "to": [{ "key_code": "p", "modifiers": ["left_command", "left_shift"] }],
                    "type": "basic"
                }
            ]
        }
    ]
}
